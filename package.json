{
  "name": "@teamemory/components",
  "version": "0.0.1",
  "description": "A Vue3 component library built with Element Plus and emotion",
  "keywords": [
    "vue",
    "component",
    "library",
    "element-plus",
    "emotion"
  ],
  "homepage": "https://github.com/teamemory/components#readme",
  "bugs": {
    "url": "https://github.com/teamemory/components/issues"
  },
  "license": "MIT",
  "author": "teamemory",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teamemory/components.git"
  },
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.cjs"
    },
    "./esm/*": "./dist/esm/*",
    "./cjs/*": "./dist/cjs/*",
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite serve examples",
    "build": "node scripts/build.js",
    "build:docs": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:serve": "vitepress serve docs",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint packages --ext .js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "prepare": "husky install",
    "new": "node scripts/cli.js create"
  },
  "dependencies": {
    "@emotion/css": "^11.11.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@element-plus/icons-vue": "^2.1.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.16.8",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/babel-preset-jsx": "^1.4.0",
    "@vue/test-utils": "^2.3.2",
    "element-plus": "^2.3.6",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.14.1",
    "happy-dom": "^9.20.3",
    "husky": "^8.0.3",
    "less": "^4.1.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "rollup": "^3.23.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.34.1",
    "sass": "^1.62.1",
    "terser": "^5.17.4",
    "tslib": "^2.5.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vitepress": "^1.0.0-alpha.76",
    "vitest": "^0.31.1",
    "vue-tsc": "^1.6.5"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
