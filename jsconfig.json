{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@teamemory/components": ["./packages/index"],
      "@teamemory/components/*": ["./packages/*"]
    }
  },
  "include": [
    "packages/**/*.js",
    "packages/**/*.jsx",
    "packages/**/*.vue",
    "examples/**/*.js",
    "examples/**/*.jsx",
    "examples/**/*.vue",
    "docs/**/*.js",
    "docs/**/*.jsx",
    "docs/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/__tests__/**/*",
    "**/coverage/**/*",
    "**/docs/.vitepress/cache/**/*"
  ]
}