{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@teamemory/components": ["./packages/index.ts"],
      "@teamemory/components/*": ["./packages/*"]
    },
    
    /* Type declaration */
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "examples/**/*.ts",
    "examples/**/*.tsx",
    "examples/**/*.vue",
    "docs/**/*.ts",
    "docs/**/*.tsx",
    "docs/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "**/__tests__/**/*",
    "**/coverage/**/*",
    "**/docs/.vitepress/cache/**/*"
  ]
}